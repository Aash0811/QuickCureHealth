<style>
.cart-con {
    height: 70px;
    width: 100vw;
    background-color: white;
    position: fixed;
    left: 0;
    bottom: 0;
    box-shadow: 0 -2px 10px #1f8384;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0 20px;
    z-index: 1000;
}

.signin {
    background-color: #1f8384;
    color: rgb(255, 243, 243);
    border: 2px solid #1f8384;
    border-radius: 10px;
    width: auto;
    height: 45px;
    font-size: 18px;
    font-weight: 500;
    box-shadow: 2px 2px 10px #1f8384;
    transition: background-color 0.3s ease-in-out;
}

.signin:hover {
    background-color: white;
    color: #1f8384;
}

@media (max-width: 576px) {
    .cart-con {
        height: 60px;
        justify-content: center;
        padding: 0 10px;
    }

    .signin {
        width: auto;
        height: 40px;
        font-size: 16px;
    }
    
}
</style>

<% layout("./boilerplate/nav.ejs") %>
<%- body -%>

<div class="cart-con">
   <a href="/cart"><button type="submit" class="signin">View Cart</button></a> 
</div>
