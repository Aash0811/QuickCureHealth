<% layout("./boilerplate/nav.ejs") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" />
<style>
  body {
    background-color: #1f8384;
    margin: 0;
    padding-bottom: 100px; /* prevent footer overlap */
    font-family: Arial, sans-serif;
  }

  h1, h2, h3 {
    color: white;
    text-align: center;
  }

  .cart-container {
    max-width: 800px;
    margin: auto;
    padding: 20px;
  }

  .cart-item {
    background-color: #207b7d;
    margin: 10px 0;
    padding: 15px;
    border-radius: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    flex-wrap: wrap;
  }

  .cart-item h3 {
    margin: 0;
    font-size: 1.2rem;
  }

  .remove-btn {
    background: none;
    border: none;
    color: white;
    font-size: 24px;
    cursor: pointer;
  }

  .footer {
    height: 80px;
    width: 100vw;
    background-color: white;
    position: fixed;
    left: 0;
    bottom: 0;
    box-shadow: 0 -2px 10px #1f8384;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30px;
    z-index: 1000;
  }

  .total-text {
    color: #1f8384;
    font-size: 1.2rem;
    font-weight: 600;
  }

  .signin {
    background-color: #1f8384;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 2px 2px 10px #1f8384;
    transition: background-color 0.3s ease;
    width: auto;
  }

  .signin:hover {
    background-color: #166b6c;
  }

  @media (max-width: 600px) {
    .cart-item {
      flex-direction: column;
      align-items: flex-start;
    }

    .footer {
      flex-direction: column;
      justify-content: center;
      text-align: center;
      height: auto;
      padding: 15px;
    }

    .total-text, .signin {
      margin: 5px 0;
    }
    
  }
</style>

<body>
  <div class="cart-container">
    <h1>Your Cart</h1>
    <hr style="color:white;">

    <% let sum = 0; %>

    <% if (cart.length === 0) { %>
      <h2>Your cart is empty.</h2>
    <% } else { %>
      <% cart.forEach(function(drug) { 
        sum += parseInt(drug.medSelling.slice(1)); %>

        <div class="cart-item">
          <h3><%= drug.name %> - <%= drug.medSelling %></h3>
          <form action="/cart/remove/<%= drug._id %>" method="POST">
            <button type="submit" class="remove-btn"><i class="fa-solid fa-trash"></i></button>
          </form>
        </div>

      <% }); %>
    <% } %>
  </div>

  <% if (sum !== 0) { %>
    <div class="footer">
      <span class="total-text">Total: â‚¹<%= sum %></span>
      <form action="/address">
        <input type="hidden" name="price" value="<%= sum %>">
        <button class="signin">Buy Now</button>
      </form>
    </div>
  <% } %>
</body>
